---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import RoomsSwites from "../components/RoomsSuites.astro";
import Dining from "../components/Dining.astro";
import Fitness from "../components/Fitness.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Welcome to Pearls">
  <header>
    <Navbar />
  </header>
  <main>
    <section id="home">
      <Hero />
    </section>
    <section id="about-us" class="bg-white">
      <About />
    </section>
    <section id="room-suites" class="bg-black">
      <RoomsSwites />
    </section>
    <section id="dining" class="bg-white">
      <Dining />
    </section>
    <section id="fitness" class="bg-black">
      <Fitness />
    </section>
    <section id="contact" class="bg-white">
      <Contact />
    </section>
  </main>
  <Footer />
</Layout>
